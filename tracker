#include<simplecpp>
class tracker:public Cannon,public Catapult,public Block
{
    bool track(int w)
    {
     if(w==1)//cannonball tracker
     {
         for(int i=0;i<5;i++)
         {
             if(abs(a[i].GY()-C1.getY())<=5)
             {
                 if(abs(a[i].GX()-C1.getX())<=5)
                    return true;
                 else return false; 
             }
             else return false;
         }
     }
     else if (w==2)//catapult tracker
     {
         for(int i=0;i<5;i++)
         {
             if(abs(a[i].GY()-C3.getY())<=5)
             {
                 if(abs(a[i].GX()-C3.getX())<=5)
                    return true;
                 else return false; 
             }
             else return false;
         }
     }
    }
};
