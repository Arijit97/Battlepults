/*getting a runtime error
----->Segmentation fault (core dumped)
the problem is in the rectangle creation
*/


#include<simplecpp>
class block
{double cx,cy;
public:
Rectangle *b;
        block(double c1,double c2)
    {
        cx=c1;
        cy=c2;
        
        *b=Rectangle(cx,cy,150,150);
       (*b).setColor(COLOR(255,255,0));
       (*b).setFill(1);
    }

    void explode()
    {Circle c1(cx,cy,10);
    c1.setColor(COLOR("red"));
    c1.setFill(1);
    double r=10;
    while(r<75)
    {
        c1.reset(cx,cy,r);
        c1.setColor(COLOR("red"));
    c1.setFill(1);
    wait(0.1);
    r+=10;
    }
    c1.hide();
    delete b;
    wait(1);
    }
};
main_program
{initCanvas("test",1000,1000);
    block *b1=new block(200,200);
    wait(5);
    (*b1).explode();
    
}
